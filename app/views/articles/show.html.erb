<div id="post_content">
  <h1 class="title"><%= @article.headline %></h1>

<h3>  <%= @article.lead %> </h3>

<p class="date">
  <strong style="font-size: 12px"> Submitted <%= time_ago_in_words(@article.created_at) %> ago </strong>
</p>

<p style="font-size: 14px">
  <%= @article.body %>
</p>
<hr>
<div id="comments">
		<h2><%= @article.comments.count %> Comments</h2>
		<%= render @article.comments %>

		<h3>Add a comment:</h3>
		<%= render "comments/form" %>
</div>
<hr>
<p><%= button_to "Back", :back, :method => "get" %></p>
