<div id="page_wrapper">
<h1>All Articles</h1>
<p><%= button_to "Write New Article", new_article_path, :method => "get" %></p>
<table>
    <thead>
        <tr>
            <th>Headline</th>
            <th>Publication Date</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody><% @articles.each do |article| %>
        <tr>
            <td><%= article.headline %></td>
            <td><%= article.created_at.strftime("%d-%m-%Y %-H:%M") %></td>
            <td><%= button_to "Show", article, :method => "get" %></td>
            <td><%= button_to "Edit", edit_article_path(article), :method => "get" %></td>
            <td><%= button_to "Destroy", article, method: :delete, data: { confirm: 'Are you sure?' }, :method => "get" %></td>
        </tr>
        <% end %></tbody>
</table>
<br>
</div>
